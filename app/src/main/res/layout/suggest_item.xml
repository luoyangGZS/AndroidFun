<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_vertical"
    android:paddingRight="17dp"
    android:paddingLeft="17dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="@dimen/dimen_primary_text_four"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        tools:text="@string/app_name"
        android:layout_weight="11"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/color_primary_text_bold"/>
    <ImageView
        android:layout_width="@dimen/search_bar_icon"
        android:layout_height="@dimen/search_bar_icon"
        android:src="@drawable/ic_search_bar"/>
</LinearLayout>